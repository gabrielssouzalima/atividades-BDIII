CREATE DATABASE IF NOT EXISTS escola;
USE escola;

CREATE TABLE turmas (
  id INT AUTO_INCREMENT PRIMARY KEY,
  turma VARCHAR(100),
  período VARCHAR(100)
);

CREATE TABLE alunos (
  id INT AUTO_INCREMENT PRIMARY KEY,
  nome VARCHAR(100),
  idade INT,
  id_turma INT,
  FOREIGN KEY (id_turma) REFERENCES turmas(id)
);

INSERT INTO turmas(turma, período) VALUES
('2DS', 'Manhã'),
('3DS', 'Noite');

